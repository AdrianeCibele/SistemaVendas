@model SistemaVendas.Models.CategoriaViewModel
@{
    ViewData["Title"] = "Cadastro";

    var disabled = (Model.Codigo == null) ? "disabled" : "";
}

<h1>Cadastro</h1>

<form asp-controller="Categoria" asp-action="Cadastro" method="post">

    <div class="form-group">
        <div class="col-4">
            <label>Descrição</label>
            <input type="text" class="form-control" asp-for="Descricao" value="@Model.Descricao" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>


    </div>

    <br />
    <div class="col">
        <button type="button" class="btn btn-info" onclick="Novo()">Novo</button>
        <button type="submit" class="btn btn-success">Gravar</button>
        <button type="button" class="btn btn-info" onclick="Listagem()">Listagem</button>
        <button type="button" class="btn btn-danger" @disabled onclick="Excluir(@Model.Codigo)">Excluir</button>
    </div>


    <input type="hidden" asp-for="Codigo" value="@Model.Codigo" />
</form>

<script>
    function Cadastrar(codigo) {
        window.location = window.origin + "\\Categoria\\Cadastro\\" + codigo;
    }

    function Novo() {
        window.location = window.origin + "\\Categoria\\Cadastro";
    }

    function Listagem() {
        window.location = window.origin + "\\Categoria";
    }

    function Excluir(codigo) {
        window.location = window.origin + "\\Categoria\\Excluir\\" + codigo;
    }


</script>