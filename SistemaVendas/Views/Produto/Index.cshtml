@model List<SistemaVendas.Models.ProdutoViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>


<table class="table ls-table">
    <thead>
        <tr>

            <th class="ls-nowrap col-xs-3">Código</th>
            <th class="hidden-xs"> Descrição </th>
            <th class="hidden-xs"> Quantidade </th>
            <th class="hidden-xs"> Valor </th>
            <th class="hidden-xs"> Categoria </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                <td>
                    @item.Codigo
                </td>
                <td>
                    @item.Descricao
                </td>
                <td>
                    @item.Quantidade
                </td>
                <td>
                    @item.Valor
                </td>
                <td>
                    @item.DescricaoCategoria
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
    function Editar(codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\"+ codigo;
    }

        function Cadastrar() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }


</script>