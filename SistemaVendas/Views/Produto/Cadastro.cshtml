@model SistemaVendas.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Cadastro";

    var disabled = (Model.Codigo == null) ? "disabled" : "";
}

<h1>Cadastro</h1>

<form asp-controller="Produto" asp-action="Cadastro" method="post">

    <div class="form-group">
        <div class="col-4">
            <label>Descricao</label>
            <input type="text" class="form-control" asp-for="Descricao" value="@Model.Descricao" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Quantidade</label>
            <input type="number" class="form-control" asp-for="Quantidade" value="@Model.Quantidade" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Valor</label>
            <input type="text" class="form-control" asp-for="Valor" value="@Model.Valor" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Categoria</label>
            <select asp-for="CodigoCategoria" class="form-control input-group-lg" asp-items="@Model.ListaCategorias"></select>
            <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
        </div>
    </div>


    <br />
    <div class="col">
        <button type="button" class="btn btn-info" onclick="Novo()">Novo</button>
        <button type="submit" class="btn btn-success">Gravar</button>
        <button type="button" class="btn btn-info" onclick="Listagem()">Listagem</button>
        <button type="button" class="btn btn-danger" @disabled onclick="Excluir(@Model.Codigo)">Excluir</button>
    </div>


    <input type="hidden" asp-for="Codigo" value="@Model.Codigo" />
</form>

<script>
    function Cadastrar(codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\" + codigo;
    }

    function Novo() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }

    function Listagem() {
        window.location = window.origin + "\\Produto";
    }

    function Excluir(codigo) {
        window.location = window.origin + "\\Produto\\Excluir\\" + codigo;
    }


</script>