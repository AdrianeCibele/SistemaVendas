@model List<SistemaVendas.Models.VendaViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Vendas</h1>


<table class="table ls-table">
    <thead>
        <tr>

            <th class="ls-nowrap col-xs-3">Código</th>
            <th class="hidden-xs">Data de Vendas</th>
            <th class="hidden-xs">Cliente</th>
            <th class="hidden-xs">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
            <td>
                @item.Codigo
            </td>
            <td>
                @item.Data
            </td>
            <td>
                @item.CodigoCliente
            </td>
            <td>
                @item.Total
            </td>
        </tr>
        }

    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Categoria</button>

<script>
    function Editar(codigo) {
        window.location = window.origin + "\\Venda\\Cadastro\\"+ codigo;
    }

        function Cadastrar() {
        window.location = window.origin + "\\Venda\\Cadastro";
    }


</script>